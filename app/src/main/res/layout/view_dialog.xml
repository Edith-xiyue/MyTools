<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/view_dialog_mainLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/dialog_show_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_40"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/dialog_show_text_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_black"
        android:textSize="@dimen/sp_14"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_15"
        app:layout_constraintTop_toBottomOf="@+id/dialog_show_text"
        app:layout_constraintLeft_toLeftOf="parent"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/dialog_show_particular"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textColor="@color/color_black"
        android:textSize="@dimen/sp_20"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"/>
    <View
        android:id="@+id/item_line"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_2"
        android:background="@color/color_black"
        android:layout_marginTop="@dimen/dp_12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_show_particular"
        android:visibility="gone"/>
    <TextView
        android:id="@+id/dialog_delete_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintVertical_weight="1"
        android:textColor="@color/color_black"
        android:textSize="@dimen/sp_20"
        android:layout_marginTop="@dimen/dp_24"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_show_particular"
        android:visibility="gone"/>

    <View
        android:id="@+id/item_line01"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_2"
        android:background="@color/color_black"
        android:layout_marginTop="@dimen/dp_12"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_delete_item"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/dialog_alter_item"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintVertical_weight="1"
        android:textColor="@color/color_black"
        android:textSize="@dimen/sp_20"
        android:layout_marginTop="@dimen/dp_24"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dialog_delete_item"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/dialog_show_text_remark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_18"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:textColor="@color/color_black"
        app:layout_constraintTop_toBottomOf="@+id/dialog_show_text_time"
        app:layout_constraintLeft_toLeftOf="parent"
        android:visibility="gone" />

    <Button
        android:id="@+id/dialog_show_confirm_button"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_25"
        android:background="@drawable/custom_button_selector"
        android:textSize="@dimen/sp_22"
        android:textColor="@color/color_black"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_20"
        app:layout_constraintTop_toBottomOf="@+id/tallyFragment_timePicker"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"/>

    <Button
        android:id="@+id/dialog_show_cancel_button"
        android:layout_width="@dimen/dp_60"
        android:layout_height="@dimen/dp_35"
        android:layout_marginTop="@dimen/dp_25"
        android:background="@drawable/custom_button_selector"
        android:textSize="@dimen/sp_22"
        android:textColor="@color/color_black"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_20"
        app:layout_constraintTop_toBottomOf="@+id/tallyFragment_timePicker"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"/>

    <DatePicker
        android:id="@+id/tallyFragment_datePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:datePickerMode="spinner"
        android:startYear="2000"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        app:layout_constraintTop_toBottomOf="@+id/dialog_show_text"
        android:calendarViewShown="false"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="gone"/>

    <TimePicker
        android:id="@+id/tallyFragment_timePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:timePickerMode="spinner"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        app:layout_constraintTop_toBottomOf="@+id/tallyFragment_datePicker"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>